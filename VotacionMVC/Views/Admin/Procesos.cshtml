@model VotacionMVC.Models.DTOs.ProcesoCrearRequest

<div class="container py-4">
    <h2 class="mb-1">📋 Crear Proceso Electoral</h2>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success">@TempData["Msg"]</div>
    }
    @if (ViewBag.Msg != null)
    {
        <div class="alert alert-warning">@ViewBag.Msg</div>
    }

    <form asp-action="Procesos" method="post" class="card p-4">
        <div class="mb-3">
            <label class="form-label">Nombre del Proceso</label>
            <input asp-for="nombre" class="form-control" placeholder="Ej: Elecciones Presidenciales 2026" />
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea asp-for="descripcion" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Tipo</label>
            <input asp-for="tipo" class="form-control" placeholder="Plancha (binomio)" />
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label">Fecha Inicio</label>
                <input asp-for="inicio" type="datetime-local" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Fecha Fin</label>
                <input asp-for="cierre" type="datetime-local" class="form-control" />
            </div>
        </div>

        <div class="form-check mb-3">
            <input asp-for="permitirBlanco" class="form-check-input" />
            <label class="form-check-label">Permitir voto en blanco</label>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-success" type="submit">Crear</button>
            <a class="btn btn-secondary" asp-controller="Acceso" asp-action="Admin">Volver</a>
        </div>
    </form>
</div>
