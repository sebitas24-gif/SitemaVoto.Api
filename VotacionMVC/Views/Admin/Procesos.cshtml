@model VotacionMVC.Models.DTOs.ProcesoCrearRequest
@{
    ViewData["Title"] = "Crear Proceso Electoral";
    string? error = ViewBag.Error as string;
}

<div class="container py-4">
    <h2 class="mb-3">📋 Crear Proceso Electoral</h2>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }
    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-warning">@error</div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-warning">
            Revisa los campos. Hay datos inválidos.
        </div>
    }

    <form asp-action="Procesos" method="post" class="card p-4">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Nombre del Proceso</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Tipo</label>
            <select asp-for="Tipo" class="form-select">
                <option value="1">Nominal</option>
                <option value="2" selected>Plancha (binomio)</option>
                <option value="3">Plurinominal</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Estado</label>
            <select asp-for="Estado" class="form-select">
                <option value="1" selected>Configuración</option>
                <option value="2">Activo</option>
                <option value="3">Cerrado</option>
            </select>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label">Fecha Inicio</label>
                <input asp-for="InicioLocal" type="datetime-local" class="form-control"
                       value="@Model.InicioLocal.ToString("yyyy-MM-ddTHH:mm")" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Fecha Fin</label>
                <input asp-for="FinLocal" type="datetime-local" class="form-control"
                       value="@Model.FinLocal.ToString("yyyy-MM-ddTHH:mm")" />
            </div>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" checked disabled />
            <label class="form-check-label">Voto nulo (simulado)</label>
            <div class="text-muted" style="font-size: .9rem;">
            </div>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-success" type="submit">Crear</button>
            <a class="btn btn-secondary" asp-action="Index">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

