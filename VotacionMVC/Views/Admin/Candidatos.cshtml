@model VotacionMVC.Controllers.AdminController.CandidatosVm
@{
    ViewData["Title"] = "Gestionar Candidatos";
}

<div class="container py-4">
    <h2 class="mb-3">👥 Gestionar Candidatos</h2>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }
    @if (TempData["Err"] != null)
    {
        <div class="alert alert-warning">@TempData["Err"]</div>
    }

    <div class="mb-3">
        <strong>Proceso activo ID:</strong>
        <span class="badge bg-primary">@Model.ProcesoElectoralId</span>
        @if (Model.ProcesoElectoralId <= 0)
        {
            <div class="text-danger mt-2">
                No hay proceso activo. Crea/activa uno para poder registrar candidatos.
            </div>
        }
    </div>

    <div class="card p-3 mb-4">
        <h5 class="mb-3">Listado (API: GET api/Candidatos)</h5>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Partido</th>
                    <th>Binomio</th>
                    <th>Lista</th>
                   
                </tr>
            </thead>
            <tbody>
                @if (Model.Lista == null || !Model.Lista.Any())
                {
                    <tr><td colspan="6" class="text-muted">Sin candidatos.</td></tr>
                }
                else
                {
                    foreach (var c in Model.Lista)
                    {
                        <tr>
                            <td>@c.id</td>
                            <td>@c.nombreCompleto</td>
                            <td>@c.partido</td>
                            <td>@(c.binomio ?? "-")</td>
                            <td>@c.numeroLista</td>
                           
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="card p-4">
        <h5 class="mb-3">Agregar Nuevo Candidato (API: POST api/Candidatos)</h5>

        <form asp-action="Candidatos" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Nuevo.ProcesoElectoralId" value="@Model.ProcesoElectoralId" />

            <div class="mb-3">
                <label class="form-label">Nombre Completo</label>
                <input class="form-control" asp-for="Nuevo.NombreCompleto" />
            </div>

            <div class="mb-3">
                <label class="form-label">Partido Político</label>
                <input class="form-control" asp-for="Nuevo.Partido" />
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre del Binomio</label>
                <input class="form-control" asp-for="Nuevo.Binomio" />
            </div>

            <div class="mb-3">
                <label class="form-label">Número de Lista</label>
                <input class="form-control" asp-for="Nuevo.NumeroLista" type="number" />
            </div>

        

            <div class="d-flex gap-2">
                <button class="btn btn-success" type="submit" @(Model.ProcesoElectoralId <= 0 ? "disabled" : "")>
                    Agregar
                </button>
                <a class="btn btn-secondary" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>
