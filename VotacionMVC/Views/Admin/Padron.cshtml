@model List<VotacionMVC.Models.DTOs.PadronItemDto>

@{
    ViewData["Title"] = "Padrón Electoral";
}

<div class="container py-4">
    <h2 class="mb-3">🧾 Padrón Electoral</h2>
    <p class="text-muted">Listado desde la API: <code>GET api/Padron</code></p>

    <div class="card">
        <div class="card-body">

            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-warning mb-0">
                    No hay datos (o la API devolvió vacío).
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Cédula</th>
                                <th>Nombre Completo</th>
                                <th>Provincia</th>
                                <th>Código PAD</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.Cedula</td>
                                    <td>@x.NombreCompleto</td>
                                    <td>@x.Provincia</td>
                                    <td><code>@x.CodigoPad</code></td>
                                    <td>@x.Estado</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <a class="btn btn-secondary mt-3" asp-controller="Admin" asp-action="Index">Volver</a>
        </div>
    </div>
</div>
