@model List<VotacionMVC.Models.DTOs.PadronItemDto>

@{
    ViewData["Title"] = "Padrón Electoral";
}

<div class="d-flex align-items-center gap-3 mb-3">
    <span style="font-size:40px;">📋</span>
    <div>
        <h1 class="mb-0">Padrón Electoral</h1>
        <div class="text-muted">En esta simulación el padrón es solo lectura.</div>
    </div>
</div>

<div class="alert alert-info">
    <strong>Información:</strong> El padrón contiene la lista de votantes y su código PAD.
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="mb-3">Votantes Registrados</h4>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning mb-0">
                No hay datos (o la API devolvió vacío).
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Cédula</th>
                            <th>Nombre Completo</th>
                            <th>Provincia</th>
                            <th>Código PAD</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.Cedula</td>
                                <td>@v.NombreCompleto</td>
                                <td>@v.Provincia</td>
                                <td><span class="badge bg-secondary">@v.CodigoPad</span></td>
                                <td>
                                    <span class="badge bg-success">@v.Estado</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <div class="text-center mt-3">
            <a class="btn btn-secondary" asp-controller="Admin" asp-action="Index">Volver</a>
        </div>
    </div>
</div>
