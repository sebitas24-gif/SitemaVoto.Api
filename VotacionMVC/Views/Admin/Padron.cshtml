@model List<VotacionMVC.Models.DTOs.PadronItemDto>
@{
    ViewData["Title"] = "Padrón";
}

<div class="container py-4">
    <h3>🧾 Padrón Electoral</h3>
    <p class="text-muted">Si tu API no tiene endpoint de listado, se mostrará vacío (pero la página funciona).</p>

    <div class="card p-3">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre Completo</th>
                        <th>Provincia</th>
                        <th>Código PAD</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-muted">No hay datos (o la API no expone listado).</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.Cedula</td>
                                <td>@v.NombreCompleto</td>
                                <td>@v.Provincia</td>
                                <td>@v.CodigoPad</td>
                                <td><span class="badge bg-success">@v.Estado</span></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <a class="btn btn-secondary" asp-controller="Acceso" asp-action="Admin">Volver</a>
        </div>
    </div>
</div>
