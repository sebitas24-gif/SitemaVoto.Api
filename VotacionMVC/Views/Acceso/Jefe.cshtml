@model VotacionMVC.Models.DTOs.JefeVerificacionDto

@{
    ViewData["Title"] = "Jefe de Junta";
}

<div class="container py-4">

    <h3 class="mb-1">✅ Verificación de Votante (por Cédula)</h3>
    <div class="text-muted mb-3">Ingrese la cédula del votante y compare con el documento físico.</div>

    <div class="card mb-3">
        <div class="card-body">
            <form asp-controller="Acceso" asp-action="Jefe" method="post" class="d-flex flex-wrap gap-2 align-items-end">
                <div style="min-width:300px; flex:1;">
                    <label class="form-label fw-bold">Cédula del Votante</label>
                    <input name="cedula" class="form-control form-control-lg" placeholder="Ej: 1234567890" />
                </div>

                <button class="btn btn-primary btn-lg px-4" type="submit">🔎 Verificar</button>
                <a class="btn btn-light btn-lg px-4" asp-controller="Acceso" asp-action="Jefe">Limpiar</a>
            </form>
        </div>
    </div>

    @if (ViewBag.Msg != null)
    {
        <div class="alert alert-info">@ViewBag.Msg</div>
    }

    @if (Model != null)
    {
        <div class="card">
            <div class="card-body d-flex gap-3 flex-wrap">

                <div class="avatar">
                    <div class="initials">
                        @Model.Nombres?.Substring(0, 1)@Model.Apellidos?.Substring(0, 1)
                    </div>
                </div>

                <div style="flex:1;">
                    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                        <div>
                            <h4 class="m-0">@Model.Nombres</h4>
                            <div class="text-muted">Cédula: @Model.Cedula</div>
                        </div>

                        <span class="badge bg-info text-dark px-3 py-2 rounded-pill">@Model.Estado</span>
                    </div>

                    <hr />

                    <div class="row g-2">
                        <div class="col-12 col-md-6">
                            <div class="label">Código PAD</div>
                            <div class="value">@Model.CodigoPad</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="label">Apellidos</div>
                            <div class="value">@Model.Apellidos</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="label">Correo</div>
                            <div class="value">@Model.Correo</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="label">Teléfono</div>
                            <div class="value">@Model.Telefono</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="label">Provincia</div>
                            <div class="value">@Model.Provincia</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="label">Cantón</div>
                            <div class="value">@Model.Canton</div>
                        </div>

                        <div class="col-12">
                            <div class="label">Mesa</div>
                            <div class="value">@Model.Mesa</div>
                        </div>
                    </div>

                    <div class="alert alert-success mt-3 mb-0">
                        ✅ <b>Verificación:</b> Si coincide, puede entregar el código PAD para votar.
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .avatar {
        width: 140px;
        height: 140px;
        border-radius: 18px;
        background: linear-gradient(135deg, #6b7cff, #6a4bc6);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        flex: 0 0 auto;
    }

    .initials {
        font-size: 56px;
        font-weight: 800;
        letter-spacing: 1px;
    }

    .label {
        color: #6b7280;
        font-weight: 700;
        margin-bottom: 2px;
    }

    .value {
        font-weight: 800;
        font-size: 18px;
    }
</style>
