@{
    ViewData["Title"] = "Acceso Votante";
}

<div class="container py-5" style="max-width: 720px;">
    <h2 class="fw-bold text-center mb-4">Acceso al Sistema de Votación</h2>

    <div class="alert alert-info">
        <b>Instrucciones:</b> Ingrese cédula y código PAD entregado por el Jefe de Junta.
    </div>

    @if (ViewBag.Msg != null)
    {
        <div class="alert alert-danger">@ViewBag.Msg</div>
    }

    <form method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label">Número de Cédula</label>
            <input name="cedula" class="form-control" maxlength="10" placeholder="10 dígitos" />
        </div>

        <div class="mb-3">
            <label class="form-label">Código de Acceso (PAD)</label>
            <input name="codigoPad" class="form-control" placeholder="PAD-XXXXXX" />
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary">Ingresar</button>
            <a class="btn btn-outline-secondary" href="/">Volver</a>
        </div>
    </form>
</div>
