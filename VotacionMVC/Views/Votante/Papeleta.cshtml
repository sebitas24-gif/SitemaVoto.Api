@model VotacionMVC.Models.ViewModels.VotantePapeletaVm
@{
    ViewData["Title"] = "Ejercicio del Voto";
    var p = Model.Proceso;
}

<div class="container py-4">

    <h2 class="mb-2">🗳️ Ejercicio del Voto</h2>

    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-warning">@TempData["Msg"]</div>
    }

    <div class="alert alert-info">
        <b>Importante:</b> Seleccione un candidato o vote en blanco. Su voto es secreto.
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-muted">Proceso</div>
                <div class="col-md-6 fw-bold text-end">@((p?.Nombre ?? "—"))</div>

                <div class="col-md-6 text-muted mt-2">Tipo</div>
                <div class="col-md-6 fw-bold text-end mt-2">@((p?.Tipo ?? "—"))</div>

                <div class="col-md-6 text-muted mt-2">Normas</div>
                <div class="col-md-6 fw-bold text-end mt-2">Seleccione 1 opción y confirme.</div>
            </div>
        </div>
    </div>

    <h4 class="mb-3">Candidatos</h4>

    <form asp-action="Confirmar" method="post">
        <div class="row g-3">

            @foreach (var c in Model.Candidatos)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="card h-100 p-3" style="cursor:pointer;">
                        <input type="radio" name="candidatoId" value="@c.id" class="form-check-input me-2" />
                        <div class="fw-bold">@c.nombreCompleto</div>
                        <div class="text-muted">@c.partido</div>
                        <div class="text-muted">@c.binomio</div>
                    </label>
                </div>
            }

            <div class="col-12 col-md-6 col-lg-3">
                <label class="card h-100 p-3" style="cursor:pointer;">
                    <input type="checkbox" name="blanco" value="true" class="form-check-input me-2" />
                    <div class="fw-bold">Voto en Blanco</div>
                    <div class="text-muted">No seleccionar ningún candidato</div>
                </label>
            </div>

        </div>

        <div class="mt-4 d-flex gap-2">
            <button class="btn btn-success" type="submit">Confirmar Voto</button>
            <button class="btn btn-light" type="reset">Cancelar Selección</button>
        </div>
    </form>
</div>
