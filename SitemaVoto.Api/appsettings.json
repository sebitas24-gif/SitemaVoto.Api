{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SitemaVotoApiContext": "Host=dpg-d5bj8u9r0fns7390s7q0-a.oregon-postgres.render.com;Port=5432;Database=torneodb_y7hr;Username=admin;Password=3AVP450rJTtk7eq8LvTvr6505XUcBneH;Ssl Mode=Require;Trust Server Certificate=true;"
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5208"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/SitemaVoto_Api_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}. {Exception}{NewLine}",
          "restrictToMinimumLevel": "Information",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "buffered": false

        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/SitemaVoto_Votante_critical_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}. {Exception}{NewLine}",
          "restrictedToMinimumLevel": "Error",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "buffered": false
        }
      }

    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  }
}