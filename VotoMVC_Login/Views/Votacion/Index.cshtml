@{
    ViewData["Title"] = "Ingreso a Votación";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h3>🗳️ Ingreso a Votación</h3>
            </div>
            <div class="card-body p-4">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <form asp-action="Index" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Cédula</label>
                        <input type="text" name="cedula" class="form-control form-control-lg" maxlength="10" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Código PAD</label>
                        <input type="text" name="codigoPad" class="form-control form-control-lg" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
