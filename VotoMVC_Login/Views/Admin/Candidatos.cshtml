@model VotoMVC_Login.Models.ViewModels.Admin.AdminCandidatosVm
@{
    ViewData["Title"] = "Candidatos";
}

<div class="container py-4">
    <h3 class="fw-bold">Gestionar Candidatos</h3>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card rounded-4 shadow-sm">
        <div class="card-body">
            <h5 class="fw-bold">Crear candidato</h5>

            <form asp-action="Candidatos" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Nuevo.ProcesoElectoralId" />

                <div class="row g-2">
                    <div class="col-md-6">
                        <label class="form-label">Nombre Completo</label>
                        <input class="form-control" asp-for="Nuevo.NombreCompleto" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Partido</label>
                        <input class="form-control" asp-for="Nuevo.Partido" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">N° Lista</label>
                        <input class="form-control" asp-for="Nuevo.NumeroLista" />
                    </div>
                    <div class="col-md-8">
                        <label class="form-label">Binomio</label>
                        <input class="form-control" asp-for="Nuevo.Binomio" />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Nuevo.Activo" />
                            <label class="form-check-label">Activo</label>
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary mt-3">Crear</button>
                <a class="btn btn-outline-secondary mt-3" asp-action="Panel">Volver</a>
            </form>
        </div>
    </div>

    <div class="card rounded-4 shadow-sm mt-3">
        <div class="card-body">
            <h5 class="fw-bold">Listado</h5>

            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Partido</th>
                            <th>Binomio</th>
                            <th>N° Lista</th>
                            <th>Activo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Lista)
                        {
                            <tr>
                                <td>@c.Id</td>
                                <td>@c.NombreCompleto</td>
                                <td>@c.Partido</td>
                                <td>@c.Binomio</td>
                                <td>@c.NumeroLista</td>
                                <td>@(c.Activo ? "Sí" : "No")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
