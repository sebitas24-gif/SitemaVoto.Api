@using VotoModelos.Enums
@model VotoMVC_Login.Models.ViewModels.Admin.AdminCandidatosVm
@{
    ViewData["Title"] = "Candidatos";

    string tipoTxt = Model.TipoProceso switch
    {
        TipoEleccion.Nominal => "Nominal",
        TipoEleccion.Plancha => "Plancha (Binomio)",
        TipoEleccion.Plurinominal => "Plurinominal (Lista)",
        _ => "—"
    };

    // Labels dinámicos según tipo
    string lblNombre = Model.TipoProceso switch
    {
        TipoEleccion.Nominal => "Nombre del candidato",
        TipoEleccion.Plancha => "Presidente",
        TipoEleccion.Plurinominal => "Nombre del candidato (lista)",
        _ => "Nombre"
    };

    string lblBinomio = Model.TipoProceso switch
    {
        TipoEleccion.Nominal => "Cargo (simulación)",
        TipoEleccion.Plancha => "Vicepresidente",
        TipoEleccion.Plurinominal => "Orden / Observación",
        _ => "Binomio"
    };

    bool mostrarBinomio = Model.TipoProceso != 0; // si viene 0, igual lo mostramos por seguridad
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h3 class="fw-bold mb-0">Gestionar Candidatos</h3>

        <span class="badge rounded-pill text-bg-secondary">
            Proceso: @tipoTxt
        </span>
    </div>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    <div class="card rounded-4 shadow-sm">
        <div class="card-body">
            <h5 class="fw-bold">Crear candidato</h5>
            <div class="text-muted small mb-3">
                El formulario se adapta al tipo de proceso activo: <b>@tipoTxt</b>
            </div>

            <form asp-action="Candidatos" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Nuevo.ProcesoElectoralId" />

                <div class="row g-2">
                    <div class="col-md-6">
                        <label class="form-label">@lblNombre</label>
                        <input class="form-control" asp-for="Nuevo.NombreCompleto" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Partido</label>
                        <input class="form-control" asp-for="Nuevo.Partido" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">N° Lista</label>
                        <input class="form-control" asp-for="Nuevo.NumeroLista" type="number" min="0" />
                    </div>

                    @* ✅ NUEVO: URL de la foto + preview *@
                    <div class="col-md-8">
                        <label class="form-label">URL de la foto</label>
                        <input class="form-control"
                               asp-for="Nuevo.ImagenUrl"
                               id="imgUrlInput"
                               placeholder="https://..." />

                        <div class="form-text">
                            Pega una URL pública (Supabase Storage público o URL accesible desde navegador).
                        </div>

                        <div class="mt-2 d-flex align-items-center gap-2">
                            <img id="imgPreview"
                                 src=""
                                 alt="Preview"
                                 style="display:none;width:72px;height:72px;object-fit:cover;border-radius:14px;border:1px solid #e9ecef;" />
                            <div id="imgPreviewFallback" class="text-muted small" style="display:block;">
                                (Se previsualiza aquí)
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 d-flex align-items-end">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Nuevo.Activo" />
                            <label class="form-check-label">Activo</label>
                        </div>
                    </div>

                    @if (mostrarBinomio)
                    {
                        <div class="col-md-8">
                            <label class="form-label">@lblBinomio</label>

                            @* Reutilizamos Nuevo.Binomio según tipo:
                               - Nominal: Cargo (simulación)
                               - Plancha: Vicepresidente
                               - Plurinominal: Orden / Observación
                            *@
                            <input class="form-control" asp-for="Nuevo.Binomio" />
                            <div class="form-text">
                                @if (Model.TipoProceso == TipoEleccion.Plancha)
                                {
                                    <span>En Plancha, aquí va el <b>Vicepresidente</b>.</span>
                                }
                                else if (Model.TipoProceso == TipoEleccion.Plurinominal)
                                {
                                    <span>En Plurinominal, puedes poner <b>Orden</b> (Ej: “Orden 1”).</span>
                                }
                                else if (Model.TipoProceso == TipoEleccion.Nominal)
                                {
                                    <span>En Nominal, puedes indicar el <b>Cargo</b> (simulación).</span>
                                }
                            </div>
                        </div>
                    }
                </div>

                <button class="btn btn-primary mt-3">Crear</button>
                <a class="btn btn-outline-secondary mt-3" asp-action="Panel">Volver</a>
            </form>
        </div>
    </div>

    <div class="card rounded-4 shadow-sm mt-3">
        <div class="card-body">
            <h5 class="fw-bold">Listado</h5>

            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Foto</th> @* ✅ NUEVO *@
                            <th>Nombre</th>
                            <th>Partido</th>
                            <th>
                                @if (Model.TipoProceso == TipoEleccion.Plancha)
                                {
                                    <span>Vicepresidente</span>
                                }
                                else if (Model.TipoProceso == TipoEleccion.Plurinominal)
                                {
                                    <span>Orden/Obs</span>
                                }
                                else if (Model.TipoProceso == TipoEleccion.Nominal)
                                {
                                    <span>Cargo</span>
                                }
                                else
                                {
                                    <span>Binomio</span>
                                }
                            </th>
                            <th>N° Lista</th>
                            <th>Activo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Lista)
                        {
                            <tr>
                                <td>@c.Id</td>

                                @* ✅ NUEVO: Miniatura de foto (con fallback) *@
                                <td style="width:60px;">
                                    @if (!string.IsNullOrWhiteSpace(c.ImagenUrl))
                                    {
                                        <img src="@c.ImagenUrl"
                                             alt="Foto"
                                             style="width:42px;height:42px;object-fit:cover;border-radius:10px;border:1px solid #e9ecef;"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        <div class="d-none align-items-center justify-content-center"
                                             style="width:42px;height:42px;border-radius:10px;background:#e9ecef;font-weight:800;">
                                            @((c.NombreCompleto?.Length ?? 0) >= 2 ? c.NombreCompleto.Substring(0, 2).ToUpper() : "CV")
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center"
                                             style="width:42px;height:42px;border-radius:10px;background:#e9ecef;font-weight:800;">
                                            @((c.NombreCompleto?.Length ?? 0) >= 2 ? c.NombreCompleto.Substring(0, 2).ToUpper() : "CV")
                                        </div>
                                    }
                                </td>

                                <td>@c.NombreCompleto</td>
                                <td>@c.Partido</td>
                                <td>@c.Binomio</td>
                                <td>@c.NumeroLista</td>
                                <td>@(c.Activo ? "Sí" : "No")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<script>
    (function () {
        const input = document.getElementById('imgUrlInput');
        const img = document.getElementById('imgPreview');
        const fallback = document.getElementById('imgPreviewFallback');

        if (!input || !img || !fallback) return;

        function update() {
            const url = (input.value || '').trim();
            if (!url) {
                img.style.display = 'none';
                img.src = '';
                fallback.style.display = 'block';
                fallback.textContent = '(Se previsualiza aquí)';
                return;
            }
            img.src = url;
            img.style.display = 'inline-block';
            fallback.style.display = 'none';
        }

        input.addEventListener('input', update);

        img.addEventListener('error', function () {
            img.style.display = 'none';
            fallback.style.display = 'block';
            fallback.textContent = '(La URL no carga. Debe ser pública.)';
        });

        img.addEventListener('load', function () {
            fallback.style.display = 'none';
        });

        update();
    })();
</script>
