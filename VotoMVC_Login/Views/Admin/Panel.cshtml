@model VotoMVC_Login.Models.ViewModels.Admin.AdminPanelVm
@{
    ViewData["Title"] = "Panel Admin";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-panel.css" asp-append-version="true" />
}

<div class="admin-page">
    <div class="admin-wrap">

        <div class="admin-hero">
            <div class="content">
                <h2>Panel de Administración</h2>
                <div class="sub">Gestión del proceso (monitoreo en vivo lo ve el público)</div>
            </div>
        </div>

        <div class="row g-3 admin-grid">
            <div class="col-md-3">
                <a class="admin-tile" asp-action="Procesos">
                    <div class="tile">
                        <div class="content">
                            <div class="title">Crear Proceso Electoral</div>
                            <div class="desc">Configurar nueva elección</div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a class="admin-tile" asp-action="Candidatos">
                    <div class="tile">
                        <div class="content">
                            <div class="title">Gestionar Candidatos</div>
                            <div class="desc">Agregar y editar candidatos</div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a class="admin-tile" asp-action="Padron">
                    <div class="tile">
                        <div class="content">
                            <div class="title">Padrón Electoral</div>
                            <div class="desc">Imprimir y descargar (CSV)</div>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a class="admin-tile" asp-action="Resultados">
                    <div class="tile">
                        <div class="content">
                            <div class="title">Exportar Resultados</div>
                            <div class="desc">Vista imprimible (PDF desde navegador)</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="admin-card">
            <div class="card-body">
                <div class="admin-head">
                    <h5>Proceso Electoral</h5>

                    <form asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-outline-secondary btn-sm">Cerrar sesión</button>
                    </form>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Error))
                {
                    <div class="alert alert-warning mt-3">@Model.Error</div>
                }
                else
                {
                    <div class="table-responsive mt-3">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Inicio</th>
                                    <th>Cierre</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Proceso.Nombre</td>
                                    <td>@Model.Proceso.Inicio</td>
                                    <td>@Model.Proceso.Cierre</td>
                                    <td><span class="badge-soft">@Model.Proceso.Estado</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
