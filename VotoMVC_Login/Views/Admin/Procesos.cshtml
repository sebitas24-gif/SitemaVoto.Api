@model VotoMVC_Login.Models.ViewModels.Admin.AdminProcesosVm
@{
    ViewData["Title"] = "Procesos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-procesos.css" asp-append-version="true" />
}

<div class="admin-page">
    <div class="admin-wrap">

        <!-- HERO -->
        <div class="admin-hero mb-3">
            <div class="content">
                <div>
                    <h3>Procesos Electorales</h3>
                    <p class="mb-0">Crea y administra el proceso electoral activo desde un solo lugar.</p>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Ok))
        {
            <div class="alert alert-success mb-3">@Model.Ok</div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Error))
        {
            <div class="alert alert-danger mb-3">@Model.Error</div>
        }

        <div class="row g-3">

            <!-- CREAR -->
            <div class="col-lg-6">
                <div class="admin-card">
                    <div class="card-body">

                        <div class="admin-title">
                            <div class="admin-icon">➕</div>
                            <div>
                                <h5>Crear proceso</h5>
                                <div class="sub">Configura tipo, estado y fechas</div>
                            </div>
                        </div>

                        <form asp-action="Procesos" method="post">
                            @Html.AntiForgeryToken()

                            <label class="form-label">Nombre</label>
                            <input class="form-control" asp-for="Nuevo.Nombre" />

                            <!-- ✅ SOLO ESTO: Descripción -->
                            <label class="form-label mt-2">Descripción</label>
                            <textarea class="form-control" asp-for="Nuevo.Descripcion" rows="3"
                                      placeholder="Ej: Proceso para Alcaldes / Presidencia / Asambleístas..."></textarea>

                            <div class="row mt-2">
                                <div class="col">
                                    <label class="form-label">Tipo</label>
                                    <select class="form-select" asp-for="Nuevo.Tipo">
                                        <option value="1">Nominal</option>
                                        <option value="2">Plancha</option>
                                        <option value="3">Plurinominal</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <label class="form-label">Estado</label>
                                    <select class="form-select" asp-for="Nuevo.Estado">
                                        <option value="1">Configuración</option>
                                        <option value="2">Activo</option>
                                        <option value="3">Cerrado</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col">
                                    <label class="form-label">Inicio</label>
                                    <input type="datetime-local" class="form-control" asp-for="Nuevo.InicioLocal" />
                                </div>
                                <div class="col">
                                    <label class="form-label">Cierre</label>
                                    <input type="datetime-local" class="form-control" asp-for="Nuevo.FinLocal" />
                                </div>
                            </div>

                            <button class="btn btn-primary mt-3 w-100">Crear</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- ACTIVO -->
            <div class="col-lg-6">
                <div class="admin-card">
                    <div class="card-body">

                        <div class="admin-title">
                            <div class="admin-icon">📌</div>
                            <div>
                                <h5>Proceso activo</h5>
                                <div class="sub">Resumen del proceso vigente</div>
                            </div>
                        </div>

                        @if (Model.Activo == null)
                        {
                            <div class="alert alert-warning mb-0">No hay proceso activo.</div>
                        }
                        else
                        {
                            <ul class="list-group">
                                <li class="list-group-item"><b>Nombre:</b> @Model.Activo.Nombre</li>

                                <!-- ✅ opcional: mostrar descripción -->
                                @if (!string.IsNullOrWhiteSpace(Model.Activo.Descripcion))
                                {
                                    <li class="list-group-item"><b>Descripción:</b> @Model.Activo.Descripcion</li>
                                }

                                <li class="list-group-item"><b>Inicio:</b> @Model.Activo.Inicio</li>
                                <li class="list-group-item"><b>Cierre:</b> @Model.Activo.Cierre</li>
                                <li class="list-group-item"><b>Estado:</b> @Model.Activo.Estado</li>
                            </ul>
                        }

                        <a class="btn btn-outline-secondary mt-3" asp-action="Panel">← Volver</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
