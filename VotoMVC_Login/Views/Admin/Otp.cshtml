@model VotoMVC_Login.Models.ViewModels.Admin.AdminOtpVm
@{
    ViewData["Title"] = "OTP Administrador";
}

<div class="container py-5 admin-container">

    <div class="admin-header">
        <h3 class="fw-bold mb-1">Verificación OTP</h3>
        <small>Cédula: <b>@Model.Cedula</b></small>
    </div>

    <div class="admin-card p-4">

        @if (!string.IsNullOrWhiteSpace(Model.Error))
        {
            <div class="alert alert-danger">@Model.Error</div>
        }

        <form asp-action="Otp" method="post">
            @Html.AntiForgeryToken()

            <label class="form-label fw-semibold">Código OTP</label>
            <input asp-for="Codigo"
                   class="form-control otp-input"
                   maxlength="6"
                   placeholder="••••••" />

            <button class="btn btn-admin w-100 mt-3">
                Ingresar
            </button>
        </form>

        <div class="mt-4 text-center">
            <p class="resend-text mb-2">¿No recibiste el código?</p>

            <div class="d-flex justify-content-center gap-2">
                <button type="button" class="btn btn-resend btn-sm">
                    📧 Reenviar correo
                </button>
                <button type="button" class="btn btn-resend btn-sm">
                    📱 Reenviar SMS
                </button>
            </div>
        </div>
    </div>
</div>
