@model VotoMVC_Login.Models.DTOs.ResultadosNacionalResponse
@{
    ViewData["Title"] = "Resultados Nacionales";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container py-4">
    <div class="d-flex justify-content-between flex-wrap gap-2 align-items-center mb-4">
        <h3 class="fw-bold mb-0">Resultados Nacionales</h3>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary shadow-sm" onclick="window.print()">
                <i class="bi bi-printer"></i> Imprimir / Guardar PDF
            </button>
            <form asp-action="EnviarResultadosCorreo" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary shadow-sm">
                    <i class="bi bi-envelope"></i> Enviar al correo
                </button>
            </form>
            <a class="btn btn-outline-secondary shadow-sm" asp-action="Panel">Volver</a>
        </div>
    </div>

    <div class="alert alert-info border-0 shadow-sm mb-4">
        Estado del Proceso: <span class="badge bg-info text-dark">@Model.estadoProceso</span>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
        <div class="card-header bg-white py-3">
            <h5 class="fw-bold mb-0">Distribución de Votos por Candidato</h5>
        </div>
        <div class="card-body">
            <div class="row g-4 align-items-center">
                <div class="col-lg-5">
                    <div class="p-2">
                        <canvas id="chartVotos" style="max-height: 300px;"></canvas>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Candidato</th>
                                    <th class="text-end">Total Votos</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in Model.porCandidato)
                                {
                                    <tr>
                                        <td class="fw-semibold text-secondary">@c.nombre</td>
                                        <td class="text-end">
                                            <span class="badge bg-primary-subtle text-primary rounded-pill px-3">@c.votos</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white py-3 text-center">
            <h5 class="fw-bold mb-0">Líderes por Provincia</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4">Provincia</th>
                            <th>Líder</th>
                            <th class="text-end pe-4">Votos del Líder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.lideresPorProvincia)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@p.provincia</td>
                                <td class="text-muted">@p.lider</td>
                                <td class="text-end pe-4">@p.votosLider</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('chartVotos').getContext('2d');

            // Extraer datos del modelo C# a JavaScript de forma segura
            const labels = @Json.Serialize(Model.porCandidato.Select(c => c.nombre));
            const data = @Json.Serialize(Model.porCandidato.Select(c => c.votos));

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: [
                            '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796'
                        ],
                        hoverOffset: 10,
                        borderWidth: 2,
                        borderColor: '#ffffff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } },
                        tooltip: { backgroundColor: 'rgba(0,0,0,0.8)', padding: 12 }
                    },
                    cutout: '70%'
                }
            });
        });
    </script>
}