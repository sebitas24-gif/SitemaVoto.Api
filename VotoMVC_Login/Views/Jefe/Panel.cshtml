@model VotoMVC_Login.Models.JefePanelVm
@{
    ViewData["Title"] = "Panel Jefe de Junta";
    var m = Model ?? new VotoMVC_Login.Models.JefePanelVm();
}

<div class="container mt-4">
    <h2>Panel del Jefe de Junta</h2>
    <p class="text-muted">Ingresa la cédula del votante para consultar sus datos.</p>

    <div class="alert alert-success">
        ✅ Iniciaste sesión como <b>@User.Identity?.Name</b>
    </div>

    @if (!string.IsNullOrWhiteSpace(m.Error))
    {
        <div class="alert alert-danger">@m.Error</div>
    }
    @if (!string.IsNullOrWhiteSpace(m.Msg))
    {
        <div class="alert alert-info">@m.Msg</div>
    }

    <form asp-controller="Jefe" asp-action="Panel" method="post" class="row g-2">
        @Html.AntiForgeryToken()

        <div class="col-md-8">
            <input class="form-control" name="cedulaBuscada" maxlength="10"
                   placeholder="Cédula del votante (10 dígitos)" value="@m.CedulaBuscada" required />
        </div>

        <div class="col-md-4 d-grid">
            <button class="btn btn-primary" type="submit">Buscar</button>
        </div>
    </form>

    @if (m.Ciudadano != null)
    {
        <hr class="my-4" />

        <div class="row g-3">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Datos Personales</h5>
                        <div><b>Cédula:</b> @m.Ciudadano.cedula</div>
                        <div><b>Nombres:</b> @m.Ciudadano.nombres</div>
                        <div><b>Apellidos:</b> @m.Ciudadano.apellidos</div>
                        <div><b>Correo:</b> @(m.Ciudadano.correo ?? "—")</div>
                        <div><b>Teléfono:</b> @(m.Ciudadano.telefono ?? "—")</div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Ubicación / Junta</h5>
                        <div><b>Provincia:</b> @m.Ciudadano.provincia</div>
                        <div><b>Cantón:</b> @m.Ciudadano.canton</div>
                        <div><b>Parroquia:</b> @(m.Ciudadano.parroquia ?? "—")</div>
                        <div><b>Rol:</b> @m.Ciudadano.rol</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
