@{
    ViewData["Title"] = "Acceso Jefe de Junta";
}

<div class="container py-5" style="max-width:520px;">
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-1">Jefatura de Mesa</h4>
            <p class="text-muted mb-4">Ingresa tu cédula para recibir OTP en tu correo.</p>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Número de Cédula</label>
                    <input class="form-control" name="cedula" maxlength="10" />
                </div>
                <button class="btn btn-primary w-100">Enviar OTP</button>
            </form>
        </div>
    </div>
</div>
