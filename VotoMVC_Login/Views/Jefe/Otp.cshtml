@{
    ViewData["Title"] = "OTP Jefe de Junta";
    var cedula = (string)ViewBag.Cedula;
}

<div class="container py-5" style="max-width:520px;">
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-1">Verificar OTP</h4>
            <p class="text-muted mb-4">Se envió un código al correo asociado a la cédula <b>@cedula</b>.</p>

            @if (TempData["ErrorOtp"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorOtp"]</div>
            }

            <form asp-action="Otp" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Código OTP</label>
                    <input class="form-control" name="codigo" maxlength="6" />
                </div>
                <button class="btn btn-primary w-100">Ingresar</button>
            </form>

            <div class="mt-3">
                <a asp-action="Login" class="btn btn-link">Volver</a>
            </div>
        </div>
    </div>
</div>
