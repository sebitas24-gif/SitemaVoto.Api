@{
    ViewData["Title"] = "OTP Administrador";
}

<h2 class="text-center">Verificación OTP - Administrador</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Msg != null)
{
    <div class="alert alert-success">@ViewBag.Msg</div>
}

<p class="text-center">Cédula: <strong>@ViewBag.Cedula</strong></p>

<form asp-action="AdminOtp" method="post"
      onsubmit="var b=document.getElementById('btn'); b.disabled=true; b.innerText='Verificando...';">
    @Html.AntiForgeryToken()

    <div class="mb-3" style="max-width:420px;margin:0 auto;">
        <label class="form-label">Código OTP</label>
        <input name="codigo" class="form-control" maxlength="6" />
    </div>

    <div class="text-center">
        <button id="btn" type="submit" class="btn btn-primary">Verificar</button>
    </div>
</form>

