@{
    ViewData["Title"] = "Ingresar OTP";
}

<h2 class="text-center">Ingresar OTP</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Msg != null)
{
    <div class="alert alert-success">@ViewBag.Msg</div>
}

<form asp-action="JefeOtp" method="post" style="max-width:420px;margin:0 auto;">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Código OTP</label>
        <input name="codigo" class="form-control" maxlength="6" />
    </div>

    <button type="submit" class="btn btn-primary w-100">Verificar</button>

    <div class="text-center mt-2">
        <a asp-action="JefeCedula">Volver</a>
    </div>
</form>
