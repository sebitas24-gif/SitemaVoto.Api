@{
    ViewData["Title"] = "Login Administrador";
}

<h2 class="text-center">Login Administrador</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Msg != null)
{
    <div class="alert alert-success">@ViewBag.Msg</div>
}

<form asp-action="AdminCedula" method="post"
      onsubmit="var b=document.getElementById('btn'); b.disabled=true; b.innerText='Enviando...';">
    @Html.AntiForgeryToken()

    <div class="mb-3" style="max-width:900px;margin:0 auto;">
        <label class="form-label">Cédula</label>
        <input name="cedula" class="form-control" maxlength="10" />
    </div>

    <div class="d-flex gap-3 align-items-center" style="max-width:900px;margin:0 auto;">
        <button id="btn" type="submit" class="btn btn-secondary">Enviar OTP</button>
        <a asp-action="Index">Volver</a>
    </div>
</form>
