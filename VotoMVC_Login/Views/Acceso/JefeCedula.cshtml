@{
    ViewData["Title"] = "Login Jefe de Junta";
}

<h2 class="text-center">Login Jefe de Junta</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Msg != null)
{
    <div class="alert alert-success">@ViewBag.Msg</div>
}

<form asp-action="JefeCedula" method="post" onsubmit="btn.disabled=true; btn.innerText='Enviando...';">
    @Html.AntiForgeryToken()

    <div class="mb-3" style="max-width:420px;margin:0 auto;">
        <label class="form-label">Cédula</label>
        <input name="cedula" class="form-control" maxlength="10" />
    </div>

    <div class="text-center">
        <button id="btn" name="btn" type="submit" class="btn btn-warning">Enviar OTP</button>
    </div>

    <div class="text-center mt-2">
        <a asp-action="Index">Volver</a>
    </div>
</form>
