@{
    ViewData["Title"] = "Inicio";
}

<style>
    /* Fondo tipo "panel morado" */
    .home-bg {
        min-height: calc(100vh - 80px);
        background: radial-gradient(900px 500px at 15% 10%, rgba(124, 58, 237, .18), transparent 55%), radial-gradient(900px 500px at 85% 15%, rgba(56, 189, 248, .12), transparent 55%), radial-gradient(900px 500px at 50% 90%, rgba(168, 85, 247, .10), transparent 60%), linear-gradient(180deg, #f7f8ff 0%, #f3f4ff 40%, #f7f8ff 100%);
    }

    /* Encabezado tipo "banner" */
    .home-hero {
        border-radius: 28px;
        padding: 28px 28px;
        background: linear-gradient(135deg, #6d28d9 0%, #7c3aed 45%, #8b5cf6 100%);
        color: #fff;
        box-shadow: 0 18px 50px rgba(109, 40, 217, .22);
        position: relative;
        overflow: hidden;
    }

        .home-hero::after {
            content: "";
            position: absolute;
            inset: -60px;
            background: radial-gradient(260px 260px at 85% 25%, rgba(255,255,255,.22), transparent 60%);
            transform: rotate(12deg);
            pointer-events: none;
        }

        .home-hero h1 {
            font-weight: 800;
            letter-spacing: .2px;
            margin: 0;
        }

        .home-hero .sub {
            opacity: .9;
            margin-top: 6px;
        }

    /* Tarjetas tipo glass */
    .nav-card {
        border: 1px solid rgba(124, 58, 237, .10);
        border-radius: 22px;
        background: rgba(255, 255, 255, .82);
        backdrop-filter: blur(10px);
        box-shadow: 0 12px 35px rgba(17, 24, 39, .08);
        transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
        overflow: hidden;
        height: 100%;
    }

        .nav-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 18px 50px rgba(17, 24, 39, .12);
            border-color: rgba(124, 58, 237, .22);
        }

    .nav-topline {
        height: 6px;
        width: 100%;
        background: linear-gradient(90deg, #7c3aed, #8b5cf6, #38bdf8);
    }

    .nav-icon {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        display: grid;
        place-items: center;
        font-size: 22px;
        background: rgba(124, 58, 237, .10);
        border: 1px solid rgba(124, 58, 237, .14);
    }

    .nav-title {
        font-weight: 800;
        margin: 0;
    }

    .nav-desc {
        color: rgba(17, 24, 39, .72);
        margin-top: 10px;
        line-height: 1.35;
    }

    .home-btn {
        border-radius: 14px !important;
        padding: 12px 14px;
        font-weight: 700;
        letter-spacing: .2px;
    }

    .btn-purple {
        border: none;
        color: #fff !important;
        background: linear-gradient(135deg, #6d28d9 0%, #7c3aed 55%, #8b5cf6 100%);
        box-shadow: 0 10px 24px rgba(109, 40, 217, .22);
    }

        .btn-purple:hover {
            filter: brightness(1.03);
        }

    .btn-green {
        border: none;
        color: #fff !important;
        background: linear-gradient(135deg, #16a34a 0%, #22c55e 70%, #34d399 100%);
        box-shadow: 0 10px 24px rgba(34, 197, 94, .18);
    }

        .btn-green:hover {
            filter: brightness(1.03);
        }

    .btn-blue-outline {
        background: rgba(59, 130, 246, .08);
        border: 1px solid rgba(59, 130, 246, .22);
        color: #1d4ed8 !important;
    }

        .btn-blue-outline:hover {
            background: rgba(59, 130, 246, .12);
            border-color: rgba(59, 130, 246, .35);
        }

    .btn-dark-outline {
        background: rgba(17, 24, 39, .04);
        border: 1px solid rgba(17, 24, 39, .14);
        color: rgba(17, 24, 39, .9) !important;
    }

        .btn-dark-outline:hover {
            background: rgba(17, 24, 39, .06);
            border-color: rgba(17, 24, 39, .22);
        }

    .home-footer {
        color: rgba(17, 24, 39, .55);
        font-size: 12.5px;
        margin-top: 26px;
        text-align: center;
    }
</style>

<div class="home-bg">
    <div class="container py-5" style="max-width: 1100px;">

        <!-- HERO -->
        <div class="home-hero mb-4">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                <div>
                    <h1>Sistema de Voto Electrónico (Demo)</h1>
                    <div class="sub">Accesos rápidos a módulos del sistema</div>
                </div>

                <div class="text-end" style="opacity:.92;">
                    <div style="font-weight:700;">🏛️ CNE (simulado)</div>
                    <div style="font-size:13px;">MVC + API</div>
                </div>
            </div>
        </div>

        <!-- CARDS -->
        <div class="row g-4">

            <!-- RESULTADOS -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="nav-card">
                    <div class="nav-topline"></div>
                    <div class="p-4 d-flex flex-column h-100">
                        <div class="d-flex align-items-center gap-3">
                            <div class="nav-icon">📊</div>
                            <h5 class="nav-title">Resultados</h5>
                        </div>

                        <div class="nav-desc">
                            Visualiza los resultados públicos finales (solo cuando el proceso esté cerrado).
                        </div>

                        <div class="mt-auto pt-4">
                            <a class="btn home-btn btn-purple w-100"
                               asp-controller="ResultadosPublicos" asp-action="Finales">
                                Ir a Resultados
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- VOTACIÓN -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="nav-card">
                    <div class="nav-topline"></div>
                    <div class="p-4 d-flex flex-column h-100">
                        <div class="d-flex align-items-center gap-3">
                            <div class="nav-icon">🗳️</div>
                            <h5 class="nav-title">Votación</h5>
                        </div>

                        <div class="nav-desc">
                            Ingreso con cédula y PAD, selección de candidato y emisión del voto.
                        </div>

                        <div class="mt-auto pt-4">
                            <a class="btn home-btn btn-green w-100"
                               asp-controller="Votacion" asp-action="Index">
                                Ir a Votar
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ADMIN -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="nav-card">
                    <div class="nav-topline"></div>
                    <div class="p-4 d-flex flex-column h-100">
                        <div class="d-flex align-items-center gap-3">
                            <div class="nav-icon">🛠️</div>
                            <h5 class="nav-title">Administrador</h5>
                        </div>

                        <div class="nav-desc">
                            Gestión del proceso, candidatos, padrón y reportes del sistema.
                        </div>

                        <div class="mt-auto pt-4">
                            <a class="btn home-btn btn-dark-outline w-100"
                               asp-controller="Admin" asp-action="Login">
                                Ir a Admin
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- JEFE -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="nav-card">
                    <div class="nav-topline"></div>
                    <div class="p-4 d-flex flex-column h-100">
                        <div class="d-flex align-items-center gap-3">
                            <div class="nav-icon">👮‍♂️</div>
                            <h5 class="nav-title">Jefe de Junta</h5>
                        </div>

                        <div class="nav-desc">
                            Validación de identidad, consulta de padrón y habilitación del votante.
                        </div>

                        <div class="mt-auto pt-4">
                            <a class="btn home-btn btn-blue-outline w-100"
                               asp-controller="Jefe" asp-action="Login">
                                Ir a Jefe de Junta
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

     

    </div>
</div>
