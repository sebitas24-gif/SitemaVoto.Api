@model VotoMVC.ViewModelos.PerfilVM

<h2>Confirmar datos</h2>

<p><b>Cédula:</b> @Model.Cedula</p>
<p><b>Nombre:</b> @Model.Nombre @Model.Apellido</p>
<p><b>Cantón:</b> @Model.Canton</p>

@if (!string.IsNullOrWhiteSpace(Model.Foto))
{
    <p><b>Foto registrada:</b></p>
    <img src="@Model.Foto" style="max-width:200px" />
}

<form asp-action="EnviarCodigo" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Cedula" />

    <label>Correo (puedes actualizarlo)</label>
    <input asp-for="Correo" />

    @* roles para conservarlos *@
    @for (int i = 0; i < Model.RolesDisponibles.Count; i++)
    {
        <input type="hidden" name="RolesDisponibles[@i]" value="@Model.RolesDisponibles[i]" />
    }

    <button type="submit">Enviar código</button>

    <div style="color:red">@Html.ValidationSummary()</div>
</form>
