@model List<string>

<h2>Elegir rol</h2>
<p>Tienes más de un rol. Selecciona con cuál deseas ingresar.</p>

<form asp-action="ElegirRol" method="post">
    @Html.AntiForgeryToken()
    <select name="rol">
        @foreach (var r in Model)
        {
            <option value="@r">@r</option>
        }
    </select>

    <button type="submit">Continuar</button>
</form>
