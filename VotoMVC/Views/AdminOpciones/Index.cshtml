@model IEnumerable<VotoModelos.OpcionElectoral>

@{
    ViewData["Title"] = "Opciones del Proceso";
    var idProceso = (int)ViewBag.IdProceso;
}

<h2>Opciones del Proceso @idProceso</h2>

<p>
    <a class="btn btn-success" asp-action="Create" asp-route-idProceso="@idProceso">
        + Crear Opción
    </a>
    <a class="btn btn-secondary" asp-action="Procesos">Volver</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Cargo</th>
            <th>IdCandidato</th>
            <th>Activo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.NombreOpcion</td>
                <td>@o.Tipo</td>
                <td>@o.Cargo</td>
                <td>@(o.IdCandidato.HasValue ? o.IdCandidato.ToString() : "-")</td>
                <td>@(o.Activo ? "SI" : "NO")</td>
            </tr>
        }
    </tbody>
</table>
