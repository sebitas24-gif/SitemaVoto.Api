@model VotoMVC.ViewModelos.OpcionVM

<h2>Confirmar voto</h2>

<p>Vas a votar por:</p>
<p><b>@Model.NombreOpcion</b></p>
<p><b>Cargo:</b> @Model.Cargo</p>

<form asp-action="Emitir" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="idOpcion" value="@Model.IdOpcion" />
    <button type="submit">Confirmar y emitir voto</button>
</form>

<a asp-action="Index">Volver</a>
