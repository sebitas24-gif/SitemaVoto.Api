@model VotoMVC.ViewModelos.OpcionesActivoVM
@{
    var proceso = ViewBag.Proceso as VotoMVC.ViewModelos.ProcesoActivoVM;
}

<h2>Votación</h2>

@if (TempData["Error"] != null)
{
    <p style="color:red">@TempData["Error"]</p>
}
@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

@if (proceso != null)
{
    <p><b>Proceso:</b> @proceso.Nombre</p>
    <p><b>Tipo:</b> @proceso.TipoEleccion</p>
    <p><b>Fecha:</b> @proceso.FechaInicio.ToShortDateString() - @proceso.FechaFin.ToShortDateString()</p>
}

@if (Model?.Opciones == null || Model.Opciones.Count == 0)
{
    <p>No hay opciones disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Opción</th>
                <th>Cargo</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var op in Model.Opciones)
            {
                <tr>
                    <td>@op.NombreOpcion</td>
                    <td>@op.Cargo</td>
                    <td>@op.Tipo</td>
                    <td>
                        <form asp-action="Confirmar" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="idOpcion" value="@op.IdOpcion" />
                            <button type="submit">Seleccionar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
